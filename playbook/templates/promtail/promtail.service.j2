[Unit]
Description="Promtail service for collecting logs and metrics"
After=network.target

[Service]
Type=simple
User=root
Group=root
EnvironmentFile={{ promtail_dir }}/conf/envfile
WorkingDirectory={{ promtail_dir }}
ExecStart=/bin/bash -c "./promtail-daemon.sh" 
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
